PORT=4000
NODE_ENV=development
JWT_SECRET=replace_with_strong_secret_key_min_32_chars
DATABASE_PATH=./billing.db
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet

# Optional: Server Wallet for automated charges (Keeper)
# KEYPAIR_PATH=./path/to/keypair.json

# Optional: Email Service (Resend)
# RESEND_API_KEY=re_...
# EMAIL_SENDER=onboarding@resend.dev

# Feature Flags
ENABLE_METADATA_SYNC=true
ENABLE_WEBHOOK_RETRIES=true
ENABLE_BALANCE_MONITOR=true
ENABLE_KEEPER=true
