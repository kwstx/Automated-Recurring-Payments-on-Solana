{
    "env": {
        "node": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:security/recommended"
    ],
    "plugins": [
        "security"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "security/detect-object-injection": "warn",
        "security/detect-non-literal-fs-filename": "warn",
        "no-eval": "error",
        "no-implied-eval": "error"
    }
}